{
  "name": "@fake-sms/chrome-ext",
  "displayName": "fake sms client",
  "version": "0.0.1",
  "description": "Receive fake sms like a real sms",
  "author": "erguotou525@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "css": "unocss ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.2",
    "plasmo": "0.84.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@unocss/cli": "^0.58.5",
    "typescript": "5.3.3"
  },
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "assets/sms.png"
        ],
        "matches": [
          "https://*/*",
          "http://*/*"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "notifications",
      "clipboardRead",
      "clipboardWrite",
      "scripting"
    ]
  }
}
